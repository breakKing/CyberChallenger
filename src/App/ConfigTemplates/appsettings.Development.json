{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Auth": {
    "ClientId": "cyber_challenger",
    "ClientSecret": "cyber_challenger_secret",
    "Audience": "cyber_challenger",
    "RefreshTokenStoreTimeInMinutes": 43200,
    "Jwt": {
      "IssuerSigningPublicKeyFile": "RsaKeys/jwt_signing_key_public.pem",
      "IssuerSigningPrivateKeyFile": "RsaKeys/jwt_signing_key_private.pem",
      "IssuerEncryptionPublicKeyFile": "RsaKeys/jwt_encryption_key_public.pem",
      "IssuerEncryptionPrivateKeyFile": "RsaKeys/jwt_encryption_key_private.pem",
      "ValidAudience": "https://cyberchallenger.example",
      "ValidIssuer": "https://cyberchallenger.example",
      "AccessTokenExpirationTimeInMinutes": 30,
      "RefreshTokenExpirationTimeInMinutes": 43200,
      "ValidateLifetime": true,
      "ValidateAudience": true,
      "ValidateIssuer": true,
      "RequireAudience": true,
      "RequireExpirationTime": true,
      "RequireSignedTokens": true,
      "ValidateIssuerSigningKey": true
    }
  }
}
